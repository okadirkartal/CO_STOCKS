 @using fields
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <script type="text/javascript" src="~/Scripts/jquery-1.8.0.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
@if (!string.IsNullOrEmpty(Current.User.userGUID))
{
   <b class="navbar-brand">Welcome @Current.User.userName</b>
}
else
{
    @Html.ActionLink("Stocks", "Index", "Stock", new { area = "" }, new { @class = "navbar-brand" })
}
    
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Stock")</li> 
                    @if (!string.IsNullOrEmpty(Current.User.userGUID))
                    {

                        <li>@Html.ActionLink("Add Stock", "AddStock", "Stock")</li>
                        <li>@Html.ActionLink("Stock List", "StockList", "Stock")</li>
                        <li>@Html.ActionLink("Stock Settings", "StockSettings", "Stock")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Stock")</li>
                    }
                    else
                    { 
                        <li>@Html.ActionLink("Login/Register", "Login", "Stock")</li>
                    }
                             </ul>
              
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Osman Kadir KARTAL</p>
        </footer>
    </div>

   
    @RenderSection("scripts", required: false)
</body>
</html>
